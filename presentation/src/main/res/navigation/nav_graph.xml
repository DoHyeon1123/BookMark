<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bookmark.presentation.features.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_homeFragment_to_timeFragment"
            app:destination="@id/timeFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.bookmark.presentation.features.library.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_listFragment_to_timeFragment"
            app:destination="@id/timeFragment" />
        <action
            android:id="@+id/action_listFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
        <argument
            android:name="bookId"
            android:defaultValue="00"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/timeFragment"
        android:name="com.example.bookmark.presentation.features.timer.TimeFragment"
        android:label="TimeFragment"
        tools:layout="@layout/fragment_time">
        <action
            android:id="@+id/action_timeFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentFragment"
        android:name="com.example.bookmark.presentation.features.comment.CommentFragment"
        android:label="CommentFragment"
        tools:layout="@layout/fragment_comment">
        <argument
            android:name="bookId"
            android:defaultValue="00"
            app:argType="string" />
    </fragment>
</navigation>